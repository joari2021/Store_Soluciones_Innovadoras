<!-- app/views/peliculas/_form.html.erb -->
<%= form_for @pelicula, { remote: true, multipart: true }  do |form| %>
  <div class="form-group mb-3">
    <%= form.label :name, class: "form-label" %>
    <%= form.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group mb-3">
    <%= form.label :poster, class: "form-label" %>
    <%= form.text_field :poster, class: "form-control" %>
  </div>
  <div class="form-group mb-3">
    <%= form.label :sinopsis, class: "form-label" %>
    <%= form.text_area :sinopsis, class: "form-control", rows: 5 %>
  </div>
  <div class="form-group mb-3">
    <%= form.label :disponible, class: "form-label" %>
    <%= form.check_box :disponible, class: "form-check-input" %>
  </div>
  <div class="form-group mb-3">
    <%= form.label :link_trailer, class: "form-label" %>
    <%= form.text_field :link_trailer, class: "form-control" %>
  </div>
  <!-- Agrega aquÃ­ otros campos del formulario -->
  <div class="form-group mt-3">
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>
