<%= turbo_frame_tag "modal-show" do%>
  <p style="color: green"><%= notice %></p>
  <!-- app/views/peliculas/show.html.erb -->
  <!-- Button trigger modal -->
  <button type="button" class="btn btn-primary d-none" id="btn_opened_modal_peliculas" data-bs-toggle="modal" data-bs-target="#modalPeliculas">
    Launch demo modal
  </button>
  <div class="modal fade" id="modalPeliculas" tabindex="-1" role="dialog" aria-labelledby="modalPeliculasLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="modal-peliculas-title"></h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body-peliculas modal-body" id="modal-body-peliculas">
          <div class="col-md-4">
            <%= image_tag @pelicula.poster, class: "img-fluid", alt: @pelicula.name if @pelicula.poster.attached? %>
          </div>
          <div class="col-md-8">
            <h1><%= @pelicula.name %></h1>
            <p><strong>Sinopsis:</strong> <%= @pelicula.sinopsis %></p>
            <p><strong>Año:</strong> <%= @pelicula.year %></p>
            <p><strong>Duración:</strong> <%= @pelicula.duration_hours %>h <%= @pelicula.duration_minutes %>m</p>
            <p><strong>Director:</strong> <%= @pelicula.director %></p>
            <p><strong>Reparto:</strong> <%= @pelicula.reparto %></p>
            <p><strong>Disponible:</strong> <%= @pelicula.disponible ? 'Sí' : 'No' %></p>
            <p><strong>Link del Trailer:</strong> <a href="<%= @pelicula.link_trailer %>" target="_blank"><%= @pelicula.link_trailer %></a></p>
            <a href="<%= peliculas_path %>" class="btn btn-secondary mt-3">Volver al Catálogo</a>
          </div>
        </div>
        <div class="modal-footer" id="modal-footer-peliculas">
          <div>
            <%= link_to "Edit this pelicula", edit_pelicula_path(@pelicula) %> |
            <%= link_to "Back to peliculas", peliculas_path %>
            <%= button_to "Destroy this pelicula", @pelicula, method: :delete %>
          </div>
          <button type="button" class="btn btn-secondary" data-dismiss="modal" id="btn_closed_modal_peliculas" >Cerrar</button>
        </div>
      </div>
    </div>
  </div>
<%end%>
